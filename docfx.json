{
    "metadata": [
        {
            "src": [
                {
                    "files": [
                        "src/CodeBridge.Core/**/*.csproj",
                        "src/CodeBridge.Cli/**/*.csproj",
                        "src/CodeBridge.MSBuild/**/*.csproj"
                    ],
                    "exclude": [
                        "**/bin/**",
                        "**/obj/**"
                    ]
                }
            ],
            "dest": "api",
            "includePrivateMembers": false,
            "disableGitFeatures": false,
            "disableDefaultFilter": false,
            "namespaceLayout": "nested",
            "memberLayout": "samePage",
            "enumSortOrder": "alphabetic",
            "allowCompilationErrors": false
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "api/**.yml",
                    "api/index.md"
                ]
            },
            {
                "files": [
                    "docs/**.md",
                    "docs/**/toc.yml",
                    "toc.yml",
                    "*.md"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**"
                ]
            }
        ],
        "output": "_site",
        "template": [
            "default",
            "modern"
        ],
        "globalMetadata": {
            "_appName": "CodeBridge",
            "_appTitle": "CodeBridge - TypeScript SDK Generator",
            "_enableSearch": true,
            "_enableNewTab": true,
            "_disableContribution": false,
            "_appFooter": "Â© 2025 CodeBridge. Generated by DocFX",
            "_appLogoPath": "images/logo.png",
            "_gitContribute": {
                "repo": "https://github.com/YOUR_USERNAME/CodeBridge",
                "branch": "main"
            }
        },
        "fileMetadata": {},
        "postProcessors": [],
        "keepFileLink": false,
        "disableGitFeatures": false
    }
}